{
  "path": "/file-line-delete",
  "executor": "csharp-script",
  "method": "post",
  "args": [
    {
      "name": "workingDirectory",
      "type": "json",
      "source": "body",
      "description": "The base path where the file is located."
    },
    {
      "name": "filePath",
      "type": "json",
      "source": "body",
      "description": "The path of the file to delete a line from, relative to the working directory."
    },
    {
      "name": "lineNumber",
      "type": "json",
      "source": "body",
      "description": "The line number to delete."
    }
  ],
  "responses": [
    {
      "statusCode": 200,
      "description": "Line deleted successfully",
      "type": "string"
    },
    {
      "statusCode": 400,
      "description": "Bad request",
      "type": "string"
    }
  ]
}