{
    "path": "/file-line-delete",
    "executor": "csharp-script",
    "method": "post",
    "args": [
        {
            "name": "workingDirectory",
            "type": "json",
            "source": "body",
            "required": true
        },
        {
            "name": "filePath",
            "type": "json",
            "source": "body",
            "required": true
        },
        {
            "name": "lineNumber",
            "type": "json",
            "source": "body",
            "required": true
        },
        {
            "name": "lineHash",
            "type": "json",
            "source": "body",
            "required": true
        }
    ],
    "responses": [
        {
            "statusCode": 200,
            "description": "Line deleted successfully"
        },
        {
            "statusCode": 400,
            "description": "Error: The file does not exist or the 'lineNumber' parameter is out of range."
        },
        {
            "statusCode": 400,
            "description": "Error: Invalid hash."
        }
    ]
}