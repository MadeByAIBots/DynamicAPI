{
  "path": "/directory-search-names",
  "executor": "bash",
  "method": "post",
  "args": [
    {
      "name": "workingDirectory",
      "type": "json",
      "source": "body",
      "description": "The base path where the search should start."
    },
    {
      "name": "directoryName",
      "type": "json",
      "source": "body",
      "description": "The name of the directory to search for."
    }
  ],
  "responses": [
    {
      "statusCode": 200,
      "description": "Search completed successfully",
      "type": "string"
    },
    {
      "statusCode": 400,
      "description": "Bad request",
      "type": "string"
    }
  ]
}